<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:ignore="HardcodedText"
    android:orientation="vertical"
    android:id="@+id/b"
    android:background="#00897B"
    android:weightSum="1">

    <ImageView
        android:layout_width="117dp"
        android:layout_height="90dp"
        android:id="@+id/imageViewLogo"
        android:src="@drawable/morsilogo"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="VIBRATIONS UTILIZED"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffe0f2f1"
        android:layout_margin="2dp" />

    <AnalogClock
        android:id="@+id/analogClock1"
        android:layout_marginTop="0dp"
        android:layout_width="76dp"
        android:layout_height="95dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="Vibrate for 300 MS"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffe0f2f1"
        android:layout_margin="2dp" />


    <Button
        android:id="@+id/btn1"
        android:layout_width="115dp"
        android:layout_height="34dp"
        android:layout_margin="2dp"
        android:text="Vibrate"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffe0f2f1"
        android:singleLine="false"
        android:background="#00695C" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"
        android:gravity="center"
        android:text="Vibrate SOS Pattern"
        android:textColor="#ffe0f2f1" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="115dp"
        android:layout_height="36dp"
        android:layout_margin="2dp"
        android:text="Vibrate"
        android:layout_gravity="center_horizontal"
        android:textColor="#ffe0f2f1"
        android:background="#00695C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:text="Vibrate Continuously"
        android:layout_gravity="center_horizontal"
        android:id="@+id/vibrateContin"
        android:layout_margin="2dp" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="115dp"
        android:layout_height="34dp"
        android:layout_gravity="center"
        android:layout_margin="2dp"
        android:text="ON"
        android:textColor="#ffe0f2f1"
        android:background="#00695C" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="115dp"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="6dp"
        android:text="Home"
        android:onClick="switchPage"
        android:textColor="#ffe0f2f1"
        android:background="#00695C" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:text="\u00A9 Morsi 2015"
        android:layout_gravity="center_horizontal"
        android:layout_margin="2dp" />

</LinearLayout><!-- From: file:/C:/Users/Tolo/Dropbox/Mors/MorsiVibeApp/app/src/main/res/layout/second_layout.xml -->